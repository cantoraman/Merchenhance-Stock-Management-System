<h2>Items Available To Order</h2>

<table>
  <tr>
    <th>Name</th>

    <th>Cost(£)</th>
    <th>Price(£)</th>
    <th>Stock Level</th>
    <th>Manufacturer</th>
  </tr>
  <% for item in @items %>
  <tr>
    <th> <a href="/items/<%= item.id %>"><%= item.name %></a>
    </th>
    <th><%= item.cost %></th>
    <th><%= item.price %></th>
    <th><%= item.stock_level %></th>
    <th><%= item.manufacturer_name()%></th>
    <th>
      <form action="/orders/<%=@order.id%>/add/<%=item.id%>" method="post">
      <input type="number" style="width: 50px;" name="amount" min="0" id="amount"/> <br><input type="submit" value="Add Item"/>      </form></th>
  </tr>
    <% end %>
</table>



<h2>Items in the Order</h2>
<% items_in_order = @order.items  %>
<table>
  <tr>
    <th>Name</th>

    <th>Cost(£)</th>
    <th>Price(£)</th>
    <th>Stock Level</th>
    <th>Manufacturer</th>
  </tr>
  <% for item in items_in_order %>
  <tr>
    <th> <%= item.name %></th>

    <th><%= item.cost %></th>
    <th><%= item.price %></th>
    <th><%= item.stock_level %></th>
    <th><%= item.manufacturer_name()%></th>
    <th><form action="/orders/<%=@order.id%>/remove/<%=item.id%>" method="post">
    <input type="submit" value="Delete Item"/></form></th>
  </tr>
    <% end %>
</table>
